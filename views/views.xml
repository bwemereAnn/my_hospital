<odoo>
    <data>
        <record id="contacts_patients_infos" model="ir.ui.view">
            <field name="name">contacts.new.add.extension</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//div[@name='button_box']" position="inside">
                    <button name="get_appointments" type="object" class="oe_stat_button" icon='fa-calendar'
                            string="Appointments" sequence="20"
                            invisible="is_patient == False">
                        <field string="Appointments" name="app_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="is_patient"/>
                </xpath>
            </field>
        </record>
        <record id="my_hospital.action_hospital_patients" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('is_patient','=',True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Add new patients
                </p>
            </field>
        </record>


    </data>
</odoo>
